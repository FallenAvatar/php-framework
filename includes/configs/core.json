{
	"API": {
		"enabled": false,
		"base_url": "/api/",
		"ns": "\\Site\\API"
	},
	"CMS": {
		"enabled": false,
		"database": {
			"connection": "default",
			"table_prefix": "cms"
		}
	},
	"PHP": {
		"functions": [
			{
				"name": "date_default_timezone_set",
				"args": [
					"America/New_York"
				]
			}
		]
	},
	"Core": {
		"debug": false,
		"require_ssl": false,
		"Data": {
			"defaultConnectionName": "default"
		},
		"Logging": {
			"enabled": true,
			"loggers": {
				"db": {
					"enabled": false,
					"connection": false,
					"table": "logs",
					"level": 15
				},
				"email": {
					"enabled": false,
					"to": "",
					"level": 8
				},
				"file": {
					"enabled": true,
					"folder": "logs",
					"level": 12
				}
			}
		},
		"Web": {
			"handlers": [
				{
					"action": "add",
					"name": "api-handler",
					"value": "\\Core\\Handlers\\APIHandler"
				},
				{
					"action": "add",
					"name": "page-handler",
					"value": "\\Core\\Handlers\\PageHandler"
				}
			]
		}
	},
	"Site": {
		"base_url": "/"
	}
}